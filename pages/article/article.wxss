/* pages/article/article.wxss */
.article-title-group {
    height: 20vmin;
    display: flex;
	background-color: #76241e;
	color: #fff;
}
.back{
	width: 8%;
}
.center{
    display: flex;
    justify-content: center;
    align-items: center;
}
.article-header{
	font-size: 8vmin;
	font-weight: bold;
	text-align: center;
	line-height: 1.8;
	width: 72%;
}
.article-content{
	width: 96vmax;
	height: 75vmin;
	overflow: scroll;
	text-indent: 2em;
	background-color: #010101;
	padding: 0 2vmax;
}
.article-content .content-text{
	width: 100%;
	height: 100%;
	line-height: 1.8;
	letter-spacing: 0.2vmin;
	color: #fff;
}
.article-footer {
    height: 5vmin;
	background-color: #76241e;
}