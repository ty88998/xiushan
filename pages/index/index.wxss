.index-page {
  background: #efeff4;
  box-sizing: border-box;
  padding-bottom: 89rpx;
  min-height: 100vh;
}

.swipper {
  height: 391rpx;
}

.swipper image {
  width: 750rpx;
  height: 391rpx;
}

.index-notice {
  margin: 10rpx;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.index-notice .notice-title {
  width: 75%;
  text-align: left;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #bbbbbb;
  font-size: 30rpx;
}

/* 展览模块样式 */
.show-container {
  padding: 22rpx 0 0 21rpx;
  background-color: #fff;
  overflow: hidden;
}

.show-title {
  display: flex;
  justify-content: space-between;
  height: 45rpx;
}

/* 热门展览 */
.hot-show {
  display: flex;
  font-size: 36rpx;
  font-family: YouYuan Regular;
  font-weight: bold;
  color: #404040;
}

.vertical-line {
  height: 42rpx;
  width: 6rpx;
  background: #5986e1;
  margin: 0 19rpx 0 11rpx;
}

.show-all {
  font-size: 30rpx;
  font-family: YouYuan Regular;
  font-weight: bold;
  color: #b7b7b7;
}

.show-all image {
  height: 19rpx;
  width: 11rpx;
  margin: 0 36rpx 0 9rpx;
}

.live-show {
  height: 320rpx;
  margin-top: 33rpx;
  display: flex;
  overflow: scroll;
}

.live-show-item {
  font-size: 26rpx;
  font-family: YouYuan Regular;
  font-weight: bold;
  text-align: center;
  color: #4d4d4d;
  width: 181rpx;
  height: 254rpx;
  margin-right: 27rpx;
}

.live-show-item-title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.live-show-item-img {
  width: 181rpx;
  margin-bottom: 21rpx;
}

.live-show-item-img view {
  box-sizing: border-box;
  padding-top: 5rpx;
  /* height: 32rpx; */
  width: 100%;
  background: rgb(100, 101, 99);
  color: #fff;
  font-size: 24rpx;
  font-family: YouYuan Regular;
  text-align: center;
  margin-top: -10rpx;
  line-height: 37rpx;
}

.live-show-item-img view text {
  font-size: 26rpx;
  font-family: 仿宋 Regular;
  text-align: center;
  line-height: 37rpx;
  margin-right: -8rpx;
}

.live-show-item-img image {
  width: 100%;
  height: 224rpx;
}

.museum-introduce {
  margin-top: 26rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 16rpx 0 28rpx 22rpx;
}

.introduce-title {
  display: flex;
  align-items: flex-start;
  font-size: 36rpx;
  font-family: YouYuan Regular;
  font-weight: bold;
}

.introduce-content {
  box-sizing: border-box;
  padding: 32rpx 57rpx 0 16rpx;
}

.introduce-content view {
  margin-top: 38rpx;
  color: #6a6a6a;
  font-size: 30rpx;
  line-height: 45rpx;
  text-indent: 2em;
  font-family: PingFangSC Regular;
}

.introduce-content view:first-child {
  margin-top: 0;
}