.detail {
    height: 100vh;
    width: 750rpx;
    background: rgb(247, 247, 255);
    font-size: 32rpx;
    font-weight: bold;
    box-sizing: border-box;
    padding: 0 30rpx;
}

.detail-option {
    display: flex;
    box-sizing: border-box;
    padding: 20rpx 14rpx;
    align-items: center;
    background: rgb(238, 238, 255);
    margin-top: 34rpx;
    border-radius: 10rpx;
}

.detail-option>view:nth-child(1) {
    width: 160rpx;
}

.detail-option>view:nth-child(2) {
    width: 502rpx;
    font-weight: normal;
}

.detail-title {
    font-size: 40rpx;
    width: 100%;
    height: 100rpx;
    color: #6699FF;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 0;
}

.detail-time-styl {
    box-sizing: border-box;
    width: 300rpx;
    display: flex;
    padding-right: 90rpx;
    justify-content: space-between;
}

.detail-time-styl>view:nth-child(2) {
    color: red;
    font-weight: bold;
}

.ctrl-btn {
    margin-top: 40rpx;
    width: 100%;
    display: flex;
    justify-content: space-around;
}

.ctrl-btn>view {
    width: 200rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background: rgb(56, 131, 250);
    border-radius: 40rpx;
    color: #fff;
}