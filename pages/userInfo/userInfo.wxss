.detail {
    height: 100vh;
    width: 100vw;
    background: white;
    font-size: 32rpx;
    font-weight: bold;
    box-sizing: border-box;
    padding: 0 27rpx;
}

.detail-option {
    height: 86rpx;
    display: flex;
    box-sizing: border-box;
    padding-left: 14rpx;
    align-items: center;
    background: #f5f7fe;
    margin-top: 34rpx;
    font-size: 30rpx;
}

.detail-option>input {
    color: #979b9c;
}

.detail-option>view:nth-child(1) {
    width: 200rpx;
}

.detail-option>view:nth-child(2) {
    font-weight: normal;
}

.detail-title {
    font-size: 40rpx;
    width: 100%;
    height: 100rpx;
    color: #6699FF;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 0;
}

.detail-time-styl {
    width: 300rpx;
    display: flex;
    justify-content: space-between;
}

.detail-time-styl>view:nth-child(2) {
    color: red;
    font-weight: bold;
}

.ctrl-btn {
    margin-top: 40rpx;
    width: 100%;
    display: flex;
    justify-content: space-around;
}

.ctrl-btn>view {
    width: 200rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background: rgb(56, 131, 250);
    border-radius: 40rpx;
    color: #fff;
}