/* pages/virtualShow/virtualShow.wxss */
.virtual-show {
    z-index: 10;
}

.virtual-show-img {
    width: 750rpx;
    height: 400rpx;
}

/* 选项展示 */
.options-show {
    position: absolute;
    width: 650rpx;
    height: 160rpx;
    /* background: red; */
    background-color: rgba(255, 255, 255, 1);
    box-shadow: 0 10rpx 20rpx 0 rgba(0, 0, 0, 0.06);
    border-radius: 20rpx;
    margin: -40rpx 50rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.option-btn {
    text-align: center;
}

.option-line {
    width: 2rpx;
    height: 100rpx;
    /* background: red; */
    background: rgba(0, 0, 0, 1);
    border-radius: 20rpx;
    opacity: 0.08;
}

.option-btn>image {
    width: 60rpx;
    height: 60rpx;
}

.option-font {
    font-size: 26rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(68, 68, 68, 1);
    line-height: 26rpx;
}

.show-content {
    margin-top: 180rpx;
    box-sizing: border-box;
    padding: 0 50rpx;
    color: #333333;
}

.show-title {
    font-size: 40rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: rgba(0, 0, 0, 1);
    line-height: 40rpx;
}

.show-body {
    text-indent: 2em;
    margin-top: 30rpx;
    font-size: 26rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    line-height: 50rpx;
}