.calendar {
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    box-sizing: border-box;
}

/* 标题 */

.calendar-title {
    line-height: 70rpx;
    font-size: 30rpx;
    text-align: left;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.calendar-title .ctrl {
    display: inline-block;
    padding: 0 20rpx;
    background: #f5f5f5;
    border-radius: 10rpx;
}

.calendar-title .item {
    display: inline-block;
    vertical-align: middle;
    line-height: 50rpx;
}

.calendar-title .title {
    min-width: 300rpx;
    text-align: center;
}

.calendar-title .today {
    text-align: center;
    width: 100rpx;
    float: right;
    margin-top: 10rpx;
    background-color: rgb(116, 177, 253);
    color: #ffffff;
}

/* 星期 */

.calendar-week {
    display: flex;
    text-align: center;
    padding: 20rpx 10rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    /* border-top: 1rpx solid #e0e0e0;
    border-bottom: 1rpx solid #e0e0e0; */
    background: #ffffff;
}

.calendar-week .item {
    flex: 1;
}

/* 日期 */

.calendar-container {
    display: flex;
    flex-wrap: wrap;
    padding: 20rpx 10rpx;
    box-sizing: border-box;
}

.calendar-container .grid {
    display: inline-block;
    width: 14.28571428571429%;
    line-height: 50rpx;
    height: 70rpx;
    position: relative;
    z-index: 1;
}

.calendar-container .grid.gray {
    color: #ccc;
}

.ticket-info {
    width: 70rpx;
    text-align: center;
    position: absolute;
    color: red;
    font-size: 18rpx;
    font-weight: bold;
    top: 35rpx;
    left: 14rpx;
}

.select {
    background: rgb(116, 177, 253);
    border-radius: 10rpx;
    color: #fff;
    width: 80%;
    margin: auto;
}