.header {
  height: 14.6vmin;
}

.header,
.bodyContent {
  background-color: #020202;
}

.subhead {
  height: 7.4vmin;
  background-color: #88302a;
  font-weight: bold;
  font-size: 5vmin;
  text-indent: 4vmax;
  line-height: 1.5;
}

.bodyContent {
  height: 77vmin;
  background-size: 100%;
  white-space: normal;
  display: flex;
  padding-top: 2vmin;
}

.culture-img {
  width: 32vmax;
  height: 75vmin;
  position: relative;
  text-align: center;
}

.culture-img .culture-thumbnail {
  width: 80%;
  height: 80%;
  margin: 5% auto;
}
.culture-thumbnail image{
  width: 100%;
  height: 100%;
}

.content {
  text-indent: 4vmax;
  font-size: 2.3vmax;
  font-size: 4.5vmin;
  letter-spacing: 0.35vmin;
  line-height: 1.6;
  height: 96%;
  width: 66vmax;
  overflow: scroll;
  padding-left: 2.5vmax;
}

.flex {
  display: flex;
  justify-content: center;
  align-items: center;
}

.PingFangSC {
  font-family: 'PingFangSC';
}

.font_header {
  font-size: 8vmin;
}

.color-ff {
  color: #fff;
}

.yuweij {
  font-family: 'yuweiJ';
  font-size: 10vmin;
}

.explainbtn{
  display: inline-block;
  width: 12vmax;
}
